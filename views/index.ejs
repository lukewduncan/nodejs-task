            --data-urlencode 'isbn=3955452957497543'
          </code>
        </pre>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-md-4">
        <div class="signup">
          <p><span class="badge badge-danger">DELETE</span> Delete Book - <small>/api/books/:id</small></p>
        </div>
      </div>
      <div class="col-md-8">
        <p>Example</p>
        <pre class="bg-dark text-white">
          <code>
            curl --location --request DELETE 'http://localhost:3000/api/books/5e601990382f9840b226b1f2' \
            --header 'Authorization: JWT
            eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJ1c2VyIjp7ImFkbWluIjpmYWxzZSwiYm9va3MiOltdLCJfaWQiOiI1ZTYwMWJlMTRiOGQ2NTQwZDRlOGRjMTIiLCJ1c2VybmFtZSI6Imx1a2VAZ21haWwuY29tIiwicGFzc3dvcmQiOiIkMmIkMTAkbHpaU2ZtSEZvekZCY2w3TTNoMHp0ZUJBRWR4OWJ0SnJsbUVld3pmRkhKc3JKeXNuTThoYnkiLCJfX3YiOjB9LCJpYXQiOjE1ODMzNTcyMzh9.iHVkhC9S2o-91In4vug35-DCdiF57LjogSydi0E_dtE'
