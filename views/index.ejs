            --data-urlencode 'author=Luke Duncan' \
            --data-urlencode 'publisher=Puffin' \
            --data-urlencode 'isbn=3955452957497543'
          </code>
        </pre>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-md-4">
        <div class="signup">
          <p><span class="badge badge-warning">PUT</span> Update Book - <small>/api/books/:id</small></p>
    
